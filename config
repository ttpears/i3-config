		statusline #fdf6e3
		separator #406f86

		focused_workspace  #267c4b #267c4b #ffffff
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #111111 #111111 #666666
		urgent_workspace   #ae4e35 #ae4e35 #fdf6e3
		binding_mode       #ae4e35 #ae4e35 #fdf6e3
	}
}

